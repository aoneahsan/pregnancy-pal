rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write pregnancy profiles for their user
    match /pregnancyProfiles/{profileId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid) &&
        request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to read and write their diet plans
    match /dietPlans/{planId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid) &&
        request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to read and write their health records
    match /healthRecords/{recordId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid) &&
        request.auth.uid == request.resource.data.userId;
    }
    
    // Public read access for app content (articles, tips, etc.)
    match /content/{document=**} {
      allow read: if true;
      allow write: if false; // Only admin through Firebase Console
    }
  }
}